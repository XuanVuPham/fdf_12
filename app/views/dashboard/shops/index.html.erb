<div class="row">
  <h2 class="row_h2">
    <%= t "common.your_shops" %>
    <div class="btn_view_all_wrapper pull-right">
      <% if @domain.present? %>
        <%= link_to t("common.btn_request"), new_dashboard_shop_path(domain_id: @domain.id),
          class: "btn btn_view_all btn-warning" %>
      <% else %>
        <%= link_to t("common.btn_request"), new_dashboard_shop_path(domain_id: "not_find"),
          class: "btn btn_view_all btn-warning" %>
      <% end %>
    </div>
  </h2>
</div>
<div class="col-md-12 magin text-center max-width" id="id_shops_list">
  <%= render @shops %>
</div>
<%= paginate @shops %>
